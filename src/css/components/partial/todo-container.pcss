.todo {
    width: 100%;
    padding: 1rem;
    background-color: var(--light-gray);
    margin-top: 1rem;
    border-radius: 0.3rem;
    position: relative;
    transition: box-shadow .2s ease;

    /*drag&drop*/
    &.moving {
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        cursor: grabbing;
        z-index: 100;
        position: absolute;

        * {
            pointer-events: none;
        }
    }
}