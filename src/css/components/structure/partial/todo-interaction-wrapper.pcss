.todo__interaction-wrapper {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    gap: 0.5rem;
    width: 100%;
    margin-top: 1.5rem;

    &::after {
        content: '';
        display: block;
        background-color: var(--accent-grey);
        width: 100%;
        height: 4rem;
        position: absolute;
        left: 0;
        bottom: 0;
        border-radius: 0.3rem;
        pointer-events: none;
    }
}
